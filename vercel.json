{
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/node",
      "config": {
        "framework": "vite",
        "buildCommand": "npm run build",
        "outputDirectory": "dist"
      }
    }
  ],
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}